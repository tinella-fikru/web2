@using _1.Models;
@model List<Product>

@{
    Layout = "_Layout";
    //var plist = ViewBag.products;
}

<div class="container">
       <h4 class="display-4">All Products</h4>
       <div class="row">
         @foreach(var p in @Model)
         {
               <div class="col-md-4">
                   <div class="card mb-4 shadow-sm" style="width: 18rem;">
                       <img src="@p.imagePath"  width="50" height="150"  class="card-img-top" alt="...">
                       <div class="card-body">
                            <h3 class="card-title">@p.productName</h3>
                            <p class="card-text">@p.productDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                   <a href="/Product/GetProductById/@p.productId" class="btn btn-sm btn-outline-secondary">View Detail</a>
                                </div>
                                @*<small class="text-muted">Item Unique Name</small>*@
                                <div class="btn-group">
                                   <a href="/Product/UpdateProductById/@p.productId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                            </div>
                       </div>
                   </div>
               </div>
         }
         
       </div>
</div>